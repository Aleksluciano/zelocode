{
  "name": "Zelo",
  "version": "0.0.1",
  "main": "main.js",
  "description": "App para auxílio na designação dos privilégios",
  "license": "MIT",
  "author": "Alex Avelar",
  "build": {
    "appId": "Zelo",
    "files": ["**/*", "dist/**/*"],
    "directories": {
        "output": "dist/release",
        "buildResources": "dist"
      },
      "win": {
        "certificateFile": "private/alexavelar.pfx",
        "verifyUpdateCodeSignature": false,
        "publisherName": "alexavelar"
      }
    },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href ./ && electron .",
    "electron-aot": "ng build --prod && electron .",
    "pack": "electron-builder --dir",
    "win": "electron-builder -w",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "package-win": "electron-packager . zelo --overwrite --platform win32 --arch x64 --out=release-builds",
    "setup": "electron-installer-windows --src dist/zelo-win32-x64/ --dest dist/installers/",
    "make-cert": "electron-builder create-self-signed-cert -p alexavelar"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/cdk": "~7.1.1",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/material": "^7.1.1",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "core-js": "^2.5.4",
    "nano-sql": "^1.8.0",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.4",
    "@angular/cli": "~7.0.4",
    "@angular/compiler-cli": "~7.0.0",
    "@angular/language-service": "~7.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "electron": "^4.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1",
    "electron-builder": "^20.38.4"
  }
}
